{
	"id": "views:my_crud",
	"widget": "CRUD",
	"collection": "meta4users",
	"views": {
		"create": "edit",
		"read": {
			"css": "col-sm-6",
			"widget": "ActionList",
			"child": {
				"template": "templates:crud_items.html"
			}
		},
		"update": "edit",
		"edit": {
			"widget": "Form",
			"css": "container",
			"schema": {
				"username": { 
					"label": "Username",
					"required": true,
					"validators": ["sanitize"]
				},
				"email": { 
					"label": "Email Address",
					"required": true,
					"validators": ["email"]
				},
				"photo": { 
					"label": "Photo",
					"collection": "uploads",
					"editor": "Upload"
				}
			}
		}
	}
}

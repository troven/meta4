{
  "name": "meta4beta",
  "home": "src",
  "basePath": "/meta4beta",
  "host": "localhost",
  "port": 8080,
  "salt": "-change-me-to-anything-",

  "features": {
	"assets": {
	  "disabled": false,
	  "path": "/",
	  "home": "src/public"
	},
	"machine": {
		"path": "/machine",
		"home": "src/api/machines",
		"repository": "http://nodemachine.org",
		"config": {
			"github": {
				"repo": "meta4",
				"owner": "troven"
			}
		}
	},
	"upload": {
	 "home": "tmp/uploads",
	  "limits": {
		"fieldNameSize": 100,
		"files": 2,
		"fields": 5
	  }
	}
  }
}
